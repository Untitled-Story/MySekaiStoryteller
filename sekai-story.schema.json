{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "const": "https://raw.githubusercontent.com/Untitled-Story/MySekaiStoryteller/refs/heads/master/sekai-story.schema.json"
    },
    "title": {
      "type": "string"
    },
    "models": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "model": {
            "type": "string"
          },
          "normal_scale": {
            "type": "number",
            "default": 2.1
          },
          "small_scale": {
            "type": "number",
            "default": 1.8
          },
          "anchor": {
            "type": "number",
            "default": 0.5
          }
        },
        "required": ["id", "model", "normal_scale", "small_scale", "anchor"],
        "additionalProperties": false
      }
    },
    "images": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "image": {
            "type": "string"
          }
        },
        "required": ["id", "image"],
        "additionalProperties": false
      }
    },
    "snippets": {
      "type": "array",
      "items": {
        "type": "object",
        "discriminator": {
          "propertyName": "type"
        },
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "const": "ChangeLayoutMode"
              },
              "wait": {
                "type": "boolean"
              },
              "delay": {
                "type": "number"
              },
              "data": {
                "type": "object",
                "properties": {
                  "mode": {
                    "enum": ["Normal", "Three"]
                  }
                },
                "required": ["mode"],
                "additionalProperties": false
              }
            },
            "required": ["type", "wait", "delay", "data"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "const": "ChangeBackgroundImage"
              },
              "wait": {
                "type": "boolean"
              },
              "delay": {
                "type": "number"
              },
              "data": {
                "type": "object",
                "properties": {
                  "imageId": {
                    "type": "number"
                  }
                },
                "required": ["imageId"],
                "additionalProperties": false
              }
            },
            "required": ["type", "wait", "delay", "data"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "const": "LayoutAppear"
              },
              "wait": {
                "type": "boolean"
              },
              "delay": {
                "type": "number"
              },
              "data": {
                "type": "object",
                "properties": {
                  "modelId": {
                    "type": "number"
                  },
                  "from": {
                    "type": "object",
                    "properties": {
                      "side": {
                        "enum": ["Center", "Left", "Right"]
                      },
                      "offset": {
                        "type": "number"
                      }
                    },
                    "required": ["side", "offset"],
                    "additionalProperties": false
                  },
                  "to": {
                    "type": "object",
                    "properties": {
                      "side": {
                        "enum": ["Center", "Left", "Right"]
                      },
                      "offset": {
                        "type": "number"
                      }
                    },
                    "required": ["side", "offset"],
                    "additionalProperties": false
                  },
                  "motion": {
                    "type": "string"
                  },
                  "facial": {
                    "type": "string"
                  },
                  "moveSpeed": {
                    "enum": ["Slow", "Normal", "Fast", "Immediate"]
                  },
                  "hologram": {
                    "type": "boolean",
                    "default": false
                  }
                },
                "required": ["modelId", "from", "to", "motion", "facial", "moveSpeed", "hologram"],
                "additionalProperties": false
              }
            },
            "required": ["type", "wait", "delay", "data"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "const": "LayoutClear"
              },
              "wait": {
                "type": "boolean"
              },
              "delay": {
                "type": "number"
              },
              "data": {
                "type": "object",
                "properties": {
                  "modelId": {
                    "type": "number"
                  },
                  "from": {
                    "type": "object",
                    "properties": {
                      "side": {
                        "enum": ["Center", "Left", "Right"]
                      },
                      "offset": {
                        "type": "number"
                      }
                    },
                    "required": ["side", "offset"],
                    "additionalProperties": false
                  },
                  "to": {
                    "type": "object",
                    "properties": {
                      "side": {
                        "enum": ["Center", "Left", "Right"]
                      },
                      "offset": {
                        "type": "number"
                      }
                    },
                    "required": ["side", "offset"],
                    "additionalProperties": false
                  },
                  "moveSpeed": {
                    "enum": ["Slow", "Normal", "Fast", "Immediate"]
                  }
                },
                "required": ["modelId", "from", "to", "moveSpeed"],
                "additionalProperties": false
              }
            },
            "required": ["type", "wait", "delay", "data"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "const": "Talk"
              },
              "wait": {
                "type": "boolean"
              },
              "delay": {
                "type": "number"
              },
              "data": {
                "type": "object",
                "properties": {
                  "speaker": {
                    "type": "string"
                  },
                  "content": {
                    "type": "string"
                  },
                  "modelId": {
                    "type": "number"
                  },
                  "voice": {
                    "type": "string"
                  }
                },
                "required": ["speaker", "content", "modelId", "voice"],
                "additionalProperties": false
              }
            },
            "required": ["type", "wait", "delay", "data"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "const": "HideTalk"
              },
              "wait": {
                "type": "boolean"
              },
              "delay": {
                "type": "number"
              }
            },
            "required": ["type", "wait", "delay"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "const": "Move"
              },
              "wait": {
                "type": "boolean"
              },
              "delay": {
                "type": "number"
              },
              "data": {
                "type": "object",
                "properties": {
                  "modelId": {
                    "type": "number"
                  },
                  "from": {
                    "type": "object",
                    "properties": {
                      "side": {
                        "enum": ["Center", "Left", "Right"]
                      },
                      "offset": {
                        "type": "number"
                      }
                    },
                    "required": ["side", "offset"],
                    "additionalProperties": false
                  },
                  "to": {
                    "type": "object",
                    "properties": {
                      "side": {
                        "enum": ["Center", "Left", "Right"]
                      },
                      "offset": {
                        "type": "number"
                      }
                    },
                    "required": ["side", "offset"],
                    "additionalProperties": false
                  },
                  "moveSpeed": {
                    "enum": ["Slow", "Normal", "Fast", "Immediate"]
                  }
                },
                "required": ["modelId", "from", "to", "moveSpeed"],
                "additionalProperties": false
              }
            },
            "required": ["type", "wait", "delay", "data"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "const": "Motion"
              },
              "wait": {
                "type": "boolean"
              },
              "delay": {
                "type": "number"
              },
              "data": {
                "type": "object",
                "properties": {
                  "modelId": {
                    "type": "number"
                  },
                  "motion": {
                    "type": "string"
                  },
                  "facial": {
                    "type": "string"
                  }
                },
                "required": ["modelId", "motion", "facial"],
                "additionalProperties": false
              }
            },
            "required": ["type", "wait", "delay", "data"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "const": "Telop"
              },
              "wait": {
                "type": "boolean"
              },
              "delay": {
                "type": "number"
              },
              "data": {
                "type": "object",
                "properties": {
                  "content": {
                    "type": "string"
                  }
                },
                "required": ["content"],
                "additionalProperties": false
              }
            },
            "required": ["type", "wait", "delay", "data"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "const": "BlackOut"
              },
              "wait": {
                "type": "boolean"
              },
              "delay": {
                "type": "number"
              },
              "data": {
                "type": "object",
                "properties": {
                  "duration": {
                    "type": "number"
                  }
                },
                "required": ["duration"],
                "additionalProperties": false
              }
            }
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "const": "BlackIn"
              },
              "wait": {
                "type": "boolean"
              },
              "delay": {
                "type": "number"
              },
              "data": {
                "type": "object",
                "properties": {
                  "duration": {
                    "type": "number"
                  }
                },
                "required": ["duration"],
                "additionalProperties": false
              }
            },
            "required": ["type", "wait", "delay", "data"],
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "required": ["title", "models", "images", "snippets"],
  "additionalProperties": false
}
